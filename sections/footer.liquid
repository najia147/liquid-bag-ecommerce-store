    {% else %}
     <div class="dynamic-blocks-wrapper">
      <div class="footer-blocks">
        {% for block in section.blocks %}
          <div class="footer-block">
            <ul>
              <li><a href="{{ block.settings.link }}" class="footer-block-link">{{ block.settings.text | escape }}</a></li>
            </ul>
