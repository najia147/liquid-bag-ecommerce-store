{% assign collection = collections[section.settings.featured_collection] %}

<section class="collection-slider">
  {% if collection.products.size > 0 %}
    <div class="slider-wrapper">
      <a class="arrow left" href="#card-0">&#8592;</a>
      <div class="product-slider">
        {% for product in collection.products %}
          <div id="card-{{ forloop.index0 }}" class="product-card">
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}">
              <p>{{ product.title }}</p>
              <p>{{ product.price | money }}</p>
            </a>
          </div>
        {% endfor %}
      </div>
      <a class="arrow right" href="#card-{{ collection.products.size | minus: 1 }}">&#8594;</a>
    </div>
  {% else %}
    <p>No products found in this collection.</p>
  {% endif %}
</section>

<style>
.collection-slider {
  padding: 20px;
}

.slider-wrapper {
  position: relative;
}

.product-slider {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  scroll-padding: 0 20px;
  gap: 20px;
  padding: 20px 0;
  scroll-behavior: smooth;
  width: 100%;
  white-space: nowrap;

  /* ðŸ§¼ HIDE SCROLLBAR CROSS-BROWSER */
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;     /* Firefox */
}

.product-slider::-webkit-scrollbar {
  display: none;             /* Chrome, Safari */
}


.product-card {
  flex: 0 0 auto;
  scroll-snap-align: start;
  width: 200px;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 6px;
  padding: 10px;
  text-align: center;
}

.product-card img {
  width: 100%;
  height: auto;
  border-radius: 4px;
}

.arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: black;
  color: white;
  text-decoration: none;
  font-size: 24px;
  padding: 10px;
  border-radius: 50%;
  z-index: 1;
  opacity: 0.7;
}

.arrow.left {
  left: 0;
}

.arrow.right {
  right: 0;
}

/* Mobile tweaks */
@media (max-width: 768px) {
  .product-card {
    width: 160px;
  }
  .arrow {
    font-size: 20px;
    padding: 8px;
  }
}
</style>


{%  schema  %} 
{
  "name": "featured-collection",
  "settings": [
    {
      "type": "collection",
       "id": "featured_collection",
       "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "featured-collection"
    }
  ]
}
{% endschema %}